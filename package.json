{
	"name": "@sipgate/jobd-express-middleware",
	"version": "1.0.0",
	"main": "dist/index.js",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.16.1",
		"@types/node": "^11.9.4",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.4",
		"nodemon": "^1.18.10",
		"prettier": "^1.16.4",
		"ts-node": "^8.0.2",
		"tslint-config-prettier": "^1.18.0",
		"tslint-eslint-rules": "^5.4.0",
		"typescript": "^3.3.3"
	},
	"peerDependencies": {
		"express": "4.x"
	},
	"scripts": {
		"build": "tsc",
		"watch": "DEBUG=jobd-middleware nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
		"format": "prettier --write src/*.ts",
		"postinstall": "tsc"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts}": [
			"prettier --write",
			"tslint",
			"git add"
		],
		"*.{json,css,md}": [
			"prettier --write",
			"git add"
		]
	},
	"dependencies": {
		"debug": "^4.1.1",
		"express": "^4.16.4"
	}
}
