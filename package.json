{
 "name": "jobd-express-middleware",
 "version": "1.0.0",
 "main": "index.js",
 "license": "MIT",
 "devDependencies": {
  "@types/express": "^4.16.1",
  "@types/node": "^11.9.4",
  "husky": "^1.3.1",
  "lint-staged": "^8.1.4",
  "nodemon": "^1.18.10",
  "prettier": "^1.16.4",
  "ts-node": "^8.0.2",
  "tslint-config-prettier": "^1.18.0",
  "tslint-eslint-rules": "^5.4.0",
  "typescript": "^3.3.3"
 },
 "scripts": {
  "build": "tsc",
  "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
  "postinstall": "tsc"
 },
 "husky": {
  "hooks": {
   "pre-commit": "lint-staged"
  }
 },
 "lint-staged": {
  "*.{ts}": [
   "prettier --write",
   "tslint",
   "git add"
  ],
  "*.{json,css,md}": [
   "prettier --write",
   "git add"
  ]
 }
}
