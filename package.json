		"express": "4.x"
	},
	"devDependencies": {
		"@types/debug": "^4.1.2",
		"@types/express": "^4.16.1",
		"@types/express-xml-bodyparser": "^0.3.1",
		"@types/jest": "^24.0.6",
		"@types/node": "^11.9.4",
		"@types/xml": "^1.0.3",
		"@types/xml2js": "^0.4.3",
		"express": "^4.16.4",
		"fs": "^0.0.1-security",
		"husky": "^1.3.1",
		"jest": "^23.6.0",
		"lint-staged": "^8.1.4",
		"nodemon": "^1.18.10",
