		"supertest": "^3.4.2",
		"ts-jest": "^23.10.5",
		"ts-node": "^8.0.2",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-eslint-rules": "^5.4.0",
		"typescript": "^3.3.3"
	},
	"scripts": {
		"build": "tsc",
		"watch": "DEBUG=jobd-middleware nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
		"test": "jest",
		"format": "prettier --write src/*.ts",
		"prepublish": "yarn build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts}": [
			"prettier --write",
			"tslint",
			"git add"
		],
		"*.{json,md}": [
			"prettier --write",
			"git add"
		]
	}
}
